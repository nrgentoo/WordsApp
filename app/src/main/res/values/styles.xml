<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Typography -->
    <style name="TP_Display">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/tp_size_display</item>
    </style>

    <style name="TP_Display.Bold" parent="TP_Display">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- BUTTONS -->
    <style name="BaseButton_Orange"  parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_button_orange</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxHeight">@dimen/button_height</item>
        <item name="android:textSize">@dimen/tp_size_title</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button_Orange" parent="BaseButton_Orange">

    </style>

    <style name="BaseButton_White" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/tp_size_body</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button_White" parent="BaseButton_White">

    </style>

    <style name="Button_White.Borderless" parent="Button_White">
        <item name="android:background">@drawable/bg_button_white_borderless</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="Button_Red" parent="Button_White">
        <item name="android:background">@drawable/bg_button_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button_Green" parent="Button_White">
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
