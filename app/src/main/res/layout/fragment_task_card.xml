<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_word"
        style="@style/TP_Display"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout_marginTop="70dp"
        tools:text="apricot" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_answer1"
        style="@style/Button_White"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_small_height"
        android:layout_marginBottom="8dp"
        tools:text="баклажан"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_answer2"
        style="@style/Button_White"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_small_height"
        android:layout_marginBottom="8dp"
        tools:text="персик"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_answer3"
        style="@style/Button_White"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_small_height"
        android:layout_marginBottom="8dp"
        tools:text="абрикос"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_answer4"
        style="@style/Button_White"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_small_height"
        android:layout_marginBottom="8dp"
        tools:text="не помню"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_dont_remember"
        style="@style/Button_White.Borderless"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_small_height"
        tools:text="Не помню"/>

</LinearLayout>